<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 默认的白底黑字的导航栏 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/text_color_9</item>
        <!-- v23 -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- 带有颜色的底白字的导航栏 -->
    <style name="AppThemeColor" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <!-- 这里填充底部的颜色值 -->
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/text_color_9</item>
    </style>

    <!-- 修改昵称页面的主题风格 -->
    <style name="UpdateNameTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <!-- 这里填充底部的颜色值 -->
        <item name="colorPrimaryDark">@color/line_color</item>
        <item name="colorAccent">@color/text_color_9</item>
        <!-- v23 -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>